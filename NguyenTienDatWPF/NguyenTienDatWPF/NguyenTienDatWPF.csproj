  <ItemGroup>
    <ProjectReference Include="..\BLL\BusinessLogicLayer.csproj" />
    <ProjectReference Include="..\DAL\DataAccessLayer.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
